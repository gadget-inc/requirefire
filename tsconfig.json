{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["es2020"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2020",
    "types": ["node", "jest"],
    "declaration": true,
    "outDir": "./pkg"
  },
  "include": ["src", "spec"],
  "exclude": ["spec/fixtures/**/*"]
}
